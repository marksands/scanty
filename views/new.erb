<form action="<%= url %>" method="post" name="new">
<div class="postzoom">
	<h2 class="title"><input type="text" name="title" title="Title" value="<%= post.title %>" /></h2>
	<p class="meta"><input type="text" name="tags" title="Tags" value="<%= post.tags %>" /></p>
	<p class="meta"><%= post.created_at %></p>
	<div class="entry">
		<textarea name="body"><%= post.body %></textarea>
	</div>
	<div class="edit"><input type="submit" value="Save" /></div>
</div>
</form>

<% if admin? %>
	<div id="new_post"><a href="/posts/new">New post</a></div>
<% end %>